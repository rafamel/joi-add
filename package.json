{
  "name": "joi-add",
  "version": "0.5.2",
  "author": "Rafa Mel",
  "description": "Add and expand on previously defined Joi schemas. Define check-specific error messages. Add custom function validations.",
  "homepage": "https://github.com/rafamel/joi-add",
  "main": "./lib/index",
  "scripts": {
    "lint": "eslint ./lib --ext .js",
    "lint:test": "eslint ./test --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "test": "npm run lint:test && jest ./test/.*.test.js --runInBand",
    "watch": "nodemon ./node_modules/.bin/run-s lint test",
    "checks": "run-s lint lint:* && jest ./test/.*.test.js && npm outdated",
    "prepublishOnly": "npm run checks",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "contributors": [
    {
      "name": "Rafa Mel"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/joi-add"
  },
  "license": "MIT",
  "keywords": [
    "joi",
    "extension",
    "plugin",
    "add",
    "function",
    "validation",
    "message"
  ],
  "bugs": {
    "url": "https://github.com/rafamel/joi-add/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/rafamel/joi-add/raw/master/LICENSE"
    }
  ],
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/joi": "^13.0.3",
    "coveralls": "^3.0.0",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.3",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^21.2.1",
    "joi": "^13.0.2",
    "markdownlint-cli": "^0.5.0",
    "nodemon": "^1.12.7",
    "npm-run-all": "^4.1.1"
  },
  "dependencies": {
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
